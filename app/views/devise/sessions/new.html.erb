<div class="container-login">
  <h1 class="text-center">RunLink</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  placeholder: "email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  placeholder: "password",
                  label: false,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <%= f.button :submit, "Sign in", class: "btn-runlink d-block w-100" %>
  <% end %>
  <%= link_to "Create an account", new_registration_path(resource_name), class: "d-block text-center mt-3 link-to-sighup" %><br />
</div>
