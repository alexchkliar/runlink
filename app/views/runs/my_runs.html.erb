<% @runs.each do |run| %>
  <ul>
    <% run.trail.photos.each do |photo| %>
      <li><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></li>
    <% end %>
    <li><%= link_to run.trail.name, my_run_path(run) %></li>
    <li>Date & time: <%= run.date %></li>
    <li> <%= run.run_participants.length %> runners participating</li>
    <li><%= run.trail.location %></li>
    <li>Organizer:
      <%= link_to run.run_participants.find_by(creator: true).user.name, user_path(run.run_participants.find_by(creator: true).user) %>
      <% if run.run_participants.find_by(creator: true).user == current_user %>
        <%= "(you)" %>
      <% end %>
    </li>
    <li>Distance: <%= run.trail.distance %>km</li>
    <li>Difficulty: <%= run.trail.difficulty %></li>
    <li>
      <% run.trail.rating.ceil.times do %>
        <%="â‹†"%>
      <% end %>
    </li>
  </ul>
<% end %>
