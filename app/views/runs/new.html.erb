<%= stylesheet_pack_tag 'application' %>
<h1><%= @trail.name %></h1>
<div class="new-run-top">
  <%= cl_image_tag @trail.photos.first.key, height: 180, width: 330, crop: :fill %></li>
  <h2 class="trail-booking-header"><%= @trail.location %>, <%= @trail.distance %>km</h2>
  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <%= simple_form_for([@trail, @run]) do |f| %>
    <%#= f.error_notification %>
    <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :date, required: true, as: :string %>
    <%= f.simple_fields_for :run_participants do |rp| %>
      <%#= rp.association :user, :collection => User.all(:order => 'name'), :prompt => "Choose a Company" %>
      <%= rp.association :user, required: true, collection: @users %>
      <%#= rp.input :user, as: :select, collection: @users %>
    <% end %>
    <%= f.submit "Schedule run", class: "btn-create-run d-block w-100" %>
  <% end %>
</div>
