<h1><%= @trail.name %></li></h1>
<li><%= @trail.location %></li>
<li><%= @trail.distance %>km</li>
<li><%= @trail.difficulty %></li>
<li><%= @trail.rating %> ⋆⋆⋆⋆⋆</li>

<h2>Pick a date to run and some users to run with!</h2>
<%= simple_form_for([@trail, @run]) do |f| %>
  <%#= f.error_notification %>
  <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :date %>
  <%= f.simple_fields_for :run_participants do |rp| %>
    <%= rp.input :user, as: :select, collection: @users %>
  <% end %>
  <%= f.submit %>
<% end %>
