<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="text-center mt-5">running profile</h1>
    <div class="simple-form-complete-profile">
      <%= simple_form_for(@user) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :first_name, label: false, placeholder: "First name" %>
        <%= f.input :last_name, label: false, placeholder: "Last name" %>
        <%= f.input :gender, label: false, prompt: "Select your gender", collection: ["Male","Female"] %>
        <%= f.input :location, label: false, placeholder: "Location" %>
        <%= f.input :running_exp, label: false, prompt: "Select your running experience", collection: ["Beginner","Intermediate", "Advanced"] %>
        <%= f.input :bio, label: false, placeholder: "Bio" %>
        <%= f.input :birth_date %>
        <%= f.input :avatar, as: :file %>
       <%= f.submit "Complete Profile", class: "btn-complete d-block w-100" %>
      <% end %>
    </div>
  </div>
</div>
