
<div class="container mt-5">
  <h1>Users</h1>


  <div class="table">
    <table >
      <thead>
        <tr>
          <th>Profile picture</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Gender</th>
          <th>Location</th>
          <th>Running Experience Level</th>
          <th>Bio</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= cl_image_tag user.avatar.key, height: 300, width: 400, crop: :fill %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.gender %></td>
            <td><%= user.location %></td>
            <td><%= user.running_exp %></td>
            <td><%= user.bio %></td>
            <td><%= link_to 'Show', user %></td>

            <%# if policy(user).edit? %>
              <td><%#= link_to 'Edit', edit_user_path(user) %></td>
            <%# end %>
            <%# if policy(restaurant).destroy? %>
              <td><%#= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%# end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
