<div class="container mt-5">
  <h1>Find runners</h1>


  <div class="table">
    <table >
      <thead>
        <tr>
          <th>Profile picture</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Gender</th>
          <th>Location</th>
          <th>Running Experience Level</th>
          <th>Bio</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= cl_image_tag user.avatar.key, height: 300, width: 400, crop: :fill %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.gender %></td>
            <td><%= user.location %></td>
            <td><%= user.running_exp %></td>
            <td><%= user.bio %></td>
            <td><%= link_to 'Show', user %></td>
            <%# unless policy(user).owner? %>
              <td><%= link_to 'Message', my_messages_path(receiver_id: user.id)%></td>
            <%# end %>

            <%# if policy(user).edit? %>
              <td><%#= link_to 'Edit', edit_user_path(user) %></td>
            <%# end %>
            <%# if policy(restaurant).destroy? %>
              <td><%#= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%# end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<% @users.each do |user| %>
  <div>
    <div class="profile-card-container">
      <div class="card-profile-info">
        <div class="profile-img"><%= cl_image_tag user.avatar.key %></div>
        <div class="profile-info">
          <p><%= user.first_name %>, <%= Time.zone.now.year - user.birth_date.year %></p>
          <p><%= user.running_exp %></p>
          <p><%= user.location %></p>
        </div>
      </div>
      <div class="profile-bio">
        <p><%= user.bio %></p>
      </div>
      <div class="card-buttons">
        <%= link_to "Follow", "#" %>
        <%= link_to "Message", my_messages_path(receiver_id: user.id) %>
      </div>
    </div>
  </div>
<% end %>
